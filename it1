#include <stdio.h>

int main()
{
    int t1, t2, t3;
    float total_time;

    printf("Enter the time for the first guest to eat the cake: "); // Зчитування значень t1
    scanf("%d", &t1);

    printf("Enter the time for the second guest to eat the cake: "); // Зчитування значень t2
    scanf("%d", &t2);

    printf("Enter the time for the third guest to eat the cake: "); // Зчитування значень t3
    scanf("%d", &t3);

    total_time = 1.0 / t1 + 1.0 / t2 + 1.0 / t3; // Обчислення загального часу

    printf("Guests can eat the cake together for %.2f hours\n", 1 / total_time); // Виведення результату

    return 0;
}
